<div class="showPost_heading">

    <a href="/admin/admin_dashboard" class="back-btn">&larr; Back</a>
    
    <div class="showPost_operators">
    
        <form action="/admin/editPost/<%= data._id %>" method="get">
            <input type="submit" value="Update" class="update_input" >
        </form>
        
            <form action="/admin/deletePost/<%= data._id %>?_method=delete" method="POST">
                <input type="submit" value="Delete" class="delete_input">
            </form>
    </div>
</div>

<div class="showPost_container">
    <div class="dates">
        <small>Created at: <%=data.createdAt.toDateString()%> </small> 
        <small>Last updated at:  <%=data.updatedAt.toDateString()%> </small>
    </div>
    <h2 class="post_title"><%= data.title%></h2>
    <div class="post_image_container">

        <img src="/<%= data.postImage%>" alt="..." class="post_image">
    </div>
    <p class="post_description">
        <%=data.description%>
    </p>
</div>
